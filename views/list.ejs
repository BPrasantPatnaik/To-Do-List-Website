<%- include("header") -%>
<body>

    <div class="box" id="heading">
        <h1><%= Heading %></h1>
    </div>
    
    <div class="box">
        <% for(var i=0;i< ToDoList.length ;i++){%>

            <form action="/delete" method="post" >
                <div class="item">
                <input type="checkbox" name="checkbox" value=<%=ToDoList[i]._id%> onChange="this.form.submit()">
                <p> <%= ToDoList[i].job %> </p>
                </div>
                <input type="hidden" name="HeadingName" value="<%=Heading%>"></input>
            </form>       
       <% } %>
       <form class="item"  action="/" method="post">
        <input type="text"  name="todo" placeholder="New Item" autocomplete="off">
        <button type="submit" name="List" value=<%= Heading %> >+</button>
        
       </form>
    </div>
    <%- include("footer") -%>   
</body>
</html>